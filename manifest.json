{
  "manifest_version": 3,
  "name": "SRT Grabber",
  "version": "1.0",
  "description": "Grab and download SRT caption files from any website.",
  "permissions": [
    "webRequest",
    "storage",
    "downloads",
    "tabs",
    "scripting",
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Grab Captions"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
